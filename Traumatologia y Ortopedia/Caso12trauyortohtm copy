    <script>
        let locked = false;
        let selectedAnswers = {};
        const correctAnswers = {
            4231: "B",
            4232: "B",
            4233: "A",
            4234: "C",
            4235: "A"

        };

        function selectAnswer(questionIndex, element, option) {
            if (locked || selectedAnswers[questionIndex]) return;

            document.querySelectorAll([data-index='${questionIndex}'] .options li).forEach(li => li.classList.remove('selected', 'correct', 'incorrect'));
            element.classList.add('selected');
            selectedAnswers[questionIndex] = option;

            if (option === correctAnswers[questionIndex]) {
                element.classList.add('correct');
            } else {
                element.classList.add('incorrect');
            }
        }

        function lockAnswers() {
            let correct = 0;
            let total = Object.keys(correctAnswers).length;

            for (let index in correctAnswers) {
                if (selectedAnswers[index] === correctAnswers[index]) {
                    correct++;
                }
                document.getElementById(justification-${index}).style.display = 'block';
            }

            let score = (correct / total) * 100;
            let resultText = ‚úÖ Correctas: ${correct} | ‚ùå Incorrectas: ${total - correct} <br><br>üìä Promedio: ${score.toFixed(2)}%;
            document.getElementById('results').innerHTML = resultText;
            document.getElementById('results').style.display = 'block';

            locked = true;
            document.getElementById('submit-button').disabled = true;
        }
    </script>
